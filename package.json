{
  "name": "clockit",
  "displayName": "ClockIt: Session manager",
  "description": "A time logger to track your coding sessions.",
  "version": "1.10.12",
  "publisher": "octech",
  "icon": "icon.png",
  "license": "MIT",
  "repository": "https://github.com/RookiePlayers/clockit.git",
  "homepage": "https://clockit.octech.dev/",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "clockit.startTimeTracking",
        "title": "Clockit: Start Time"
      },
      {
        "command": "clockit.stopTimeTracking",
        "title": "Clockit: Stop Time"
      },
      {
        "command": "clockit.showTimeLog",
        "title": "Clockit: Show Time Log"
      },
      {
        "command": "clockit.clearTimeLog",
        "title": "Clockit: Clear Time Log"
      },
      {
        "command": "clockit.toggle",
        "title": "Clockit: Toggle Time Tracking"
      },
      {
        "command": "clockit.openCsv",
        "title": "Clockit: Open CSV Log"
      },
      {
        "command": "clockit.chooseCsvFolder",
        "title": "Clockit: Choose CSV Output Folder"
      },
      {
        "command": "clockit.chooseSinks",
        "title": "Clockit: Choose Sinks"
      },
      {
        "command": "clockit.editCredentials",
        "title": "Clockit: Edit Credentials"
      },
      {
        "command": "clockit.clearCredentials",
        "title": "Clockit: Clear Credentials"
      },
      {
        "command": "clockit.signIn.jira",
        "title": "Clockit: Sign in to Jira (Coming Soon)"
      },
      {
        "command": "clockit.signIn.notion",
        "title": "Clockit: Sign in to Notion (Coming Soon)"
      },
      {
        "command": "clockit.goals.openView",
        "title": "Clockit: Open Goals"
      },
      {
        "command": "clockit.goals.add",
        "title": "Clockit: Add Goal"
      },
      {
        "command": "clockit.goals.toggle",
        "title": "Clockit: Toggle Goal"
      },
      {
        "command": "clockit.goals.delete",
        "title": "Clockit: Delete Goal"
      },
      {
        "command": "clockit.goals.refresh",
        "title": "Clockit: Refresh Goals"
      },
      {
        "command": "clockit.goals.searchJira",
        "title": "Clockit: Search Jira Issues for Goals"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "clockitGoals",
          "name": "Clockit Goals"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "clockit.goals.toggle",
          "when": "view == clockitGoals && viewItem == clockitGoalItem",
          "group": "inline"
        },
        {
          "command": "clockit.goals.delete",
          "when": "view == clockitGoals && viewItem == clockitGoalItem",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Clockit Settings",
      "properties": {
        "clockit.enabledSinks": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "csv",
              "jira",
              "notion"
            ]
          },
          "default": [
            "csv"
          ],
          "description": "Select which sinks to use for exporting sessions."
        },
        "clockit.askSinksEachTime": {
          "type": "boolean",
          "default": true,
          "description": "Always prompt which sinks to use before exporting."
        },
        "clockit.enableJira": {
          "type": "boolean",
          "default": false,
          "description": "Enable Jira integration for time tracking."
        },
        "clockit.jira.apiToken": {
          "type": "string",
          "default": "",
          "description": "Jira API token for authentication."
        },
        "clockit.jira.email": {
          "type": "string",
          "default": "",
          "description": "Email associated with your Jira account."
        },
        "clockit.jira.domain": {
          "type": "string",
          "default": "",
          "description": "Your Jira domain (e.g., your-domain.atlassian.net)."
        },
        "clockit.csv.outputDirectory": {
          "type": "string",
          "default": "",
          "description": "Directory to save CSV time logs. Leave empty to use the current working directory."
        },
        "clockit.csv.filename": {
          "type": "string",
          "default": "time_log.csv",
          "description": "Filename for the CSV time log."
        },
        "clockit.csv.addHeaderIfMissing": {
          "type": "boolean",
          "default": true,
          "description": "Add header row to CSV file if it's missing."
        },
        "clockit.csv.ensureDirectory": {
          "type": "boolean",
          "default": true,
          "description": "Automatically create the output directory if it doesn't exist."
        },
        "clockit.author.name": {
          "type": "string",
          "default": "",
          "description": "Your name to include in CSV/backup logs. Falls back to git config user.name."
        },
        "clockit.author.email": {
          "type": "string",
          "default": "",
          "description": "Your email to include in CSV/backup logs. Falls back to git config user.email."
        },
        "clockit.machineName": {
          "type": "string",
          "default": "",
          "description": "Machine identifier to include in logs. Defaults to the OS hostname."
        },
        "clockit.autoStartOnLaunch": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start time tracking when VSCode launches."
        },
        "clockit.idleTimeoutMinutes": {
          "type": "number",
          "default": 5,
          "description": "Number of idle minutes before pausing time tracking."
        },
        "clockit.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for time tracking events."
        },
        "clockit.notion.enableNotion": {
          "type": "boolean",
          "default": false,
          "description": "Enable Notion integration for time tracking."
        },
        "clockit.notion.pageId": {
          "type": "string",
          "default": "",
          "description": "Notion Page ID where time logs will be recorded."
        },
        "clockit.notion.apiToken": {
          "type": "string",
          "default": "",
          "description": "Notion API token for authentication."
        },
        "clockit.notion.databaseId": {
          "type": "string",
          "default": "",
          "description": "Notion Database ID for logging time entries."
        },
        "clockit.backup.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Periodically checkpoint the active time session to a backup CSV and flush on shutdown/errors."
        },
        "clockit.backup.intervalSeconds": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "description": "How often to checkpoint the in-progress session. 0 = disable."
        },
        "clockit.backup.directory": {
          "type": "string",
          "default": "",
          "description": "Directory for backups. If empty, use this directory or workspace root."
        },
        "clockit.backup.filenamePrefix": {
          "type": "string",
          "default": "clockit_backup_",
          "description": "Prefix for backup CSV files. Final name is prefix + YYYYMMDD + .csv"
        },
        "clockit.cloud.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable cloud backup of sessions using your Clockit API token."
        },
        "clockit.cloud.apiUrl": {
          "type": "string",
          "default": "",
          "description": "Ingest endpoint for cloud backups (e.g., your Firebase Function URL)."
        },
        "clockit.cloud.apiToken": {
          "type": "string",
          "default": "",
          "description": "Clockit API token generated in your profile (stored as a secret)."
        },
        "clockit.goals.importFromJiraSubtasks": {
          "type": "boolean",
          "default": true,
          "description": "When stopping a session with a detected Jira issue key, pull subtasks into Goals automatically."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p tsconfig.build.json",
    "watch": "tsc -w -p tsconfig.build.json",
    "lint": "eslint src",
    "build": "npm run compile",
    "pretest": "npm run compile && npm run lint",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "publish": "vsce publish --no-yarn"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.2",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.0",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^9.36.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "commitlint": "^20.1.0",
    "dotenv": "^17.2.3",
    "node-fetch": "^3.3.2",
    "ts-node": "^10.9.2"
  },
  "packageManager": "npm@>=10.0.0"
}
