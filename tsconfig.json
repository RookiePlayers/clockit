{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "rootDir": "src",
    "outDir": "out",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/__tests__/**",
    "**/*.test.ts",
    "jest.config.ts",
    "jest.config.js",
    "scripts/**",
    "coverage/**",
    ".vscode/**"
  ]
}